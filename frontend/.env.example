# Frontend Environment Variables for Vercel Deployment
# Copy this file to .env.local for local development

# Backend API Configuration
VITE_API_URL=http://localhost:4000/api
# Production: Replace with your Railway backend URL
# VITE_API_URL=https://your-app-name.up.railway.app/api

# AI Chatbot Configuration
VITE_AI_API_URL=http://localhost:3001/api
VITE_AI_API_KEY=your-ai-api-key-here
VITE_OPENAI_API_KEY=your-openai-api-key-here
VITE_USE_MOCK_AI=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_NODE_ENV=development

# Campus Branding
VITE_CAMPUS_NAME=CampusOS
VITE_APP_TITLE=CampusOS - Student Management System

# Feature Flags
VITE_ENABLE_CHATBOT=true
