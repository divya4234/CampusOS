# Backend Environment Variables for Railway Deployment
# These will be set in Railway dashboard

# Database Configuration
MONGO_URI=mongodb://localhost:27017/campusos
# Production: Set this in Railway with your MongoDB Atlas connection string
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/campusos

# Server Configuration
PORT=4000
NODE_ENV=development
# Railway will automatically set PORT, but keeping 4000 as fallback

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# Security
CORS_ORIGIN=http://localhost:5173
# Production: Set to your Vercel domain
# CORS_ORIGIN=https://your-vercel-app.vercel.app

BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
APP_NAME=CampusOS
APP_URL=http://localhost:5173
# Production: Set to your Vercel domain
# APP_URL=https://your-vercel-app.vercel.app

ADMIN_EMAIL=admin@campusos.com

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# File Upload Configuration
MAX_FILE_SIZE=5242880
